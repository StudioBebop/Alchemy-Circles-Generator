- i = 0
- cells_per_row = 5
- while true
  - break if i == @seeds.count
  %div{:class => 'grid-x',
       :style => 'padding-bottom: 10px'}
    - 0.upto(cells_per_row-1).each do
      - break if i == @seeds.count
      %div{:class => 'cell auto'}
        %center
          %img{:src => '/img/loading.gif',
               'data-src' => "/circle_image?s=#{@seeds[i]}&size=tiny",
               :style => 'max-height:200px; max-width:200px; height:auto; width:auto;'}
      - i += 1

:javascript
  $(document).ready(function() {
    $("img").unveil();
  });
